\mdfdefinestyle{thicc}{
    innerleftmargin=0.5em,
    innerrightmargin=0.5em,
    innerbottommargin=1ex,
    innertopmargin=1ex,
    everyline=true,
    linewidth=0.25em,
    roundcorner=0.15em,
    theoremseparator={.},
    splittopskip=\baselineskip
}

